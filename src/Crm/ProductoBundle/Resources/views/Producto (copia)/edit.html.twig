{% extends '::movil.html.twig' %}
{% block header %}
<h1>Editar Producto</h1>
<a href="{{ path('producto') }}" data-role="button" data-icon="back" class="ui-btn-right" data-iconpos="notext"></a>
{% endblock %}
{% block content %}
<form action="{{ path('producto_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Guardar</button>
    </p>
</form>

<form action="{{ path('producto_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" data-icon="delete">Eliminar</button>
</form>
{% endblock %}
